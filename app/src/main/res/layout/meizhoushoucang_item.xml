<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    >

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/ic_more_item_default"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/meizhoushoucang_item_6_simiamge"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            fresco:roundedCornerRadius="3dp"

            />
        <TextView
            android:id="@+id/meizhoushoucang_item_6_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我家手机早饭了"
            android:layout_toRightOf="@id/meizhoushoucang_item_6_simiamge"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            />
        <TextView
            android:id="@+id/meizhoushoucang_item_6_zuozhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绳子,需要添加作者文字头"
            android:layout_below="@+id/meizhoushoucang_item_6_name"
            android:layout_alignLeft="@+id/meizhoushoucang_item_6_name"
            />
        <TextView
            android:id="@+id/meizhoushoucang_item_6_leixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型,需要添加文字头"
            android:layout_below="@+id/meizhoushoucang_item_6_zuozhe"
            android:layout_alignLeft="@+id/meizhoushoucang_item_6_zuozhe"
            />
        <TextView
            android:id="@+id/meizhoushoucang_item_6_genxin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新到第二话"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/meizhoushoucang_item_6_leixing"
            android:layout_alignLeft="@+id/meizhoushoucang_item_6_leixing"
            />
        <ImageView
            android:id="@+id/meizhoushoucang_item_iamge"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</LinearLayout>