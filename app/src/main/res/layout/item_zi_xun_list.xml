<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#fff">

    <ImageView
        android:id="@+id/item_zi_xun_list_image"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@mipmap/jiazaitu"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/item_zi_xun_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你好"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_toRightOf="@id/item_zi_xun_list_image"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/item_zi_xun_list_createTimeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="哈哈"
        android:layout_alignBottom="@id/item_zi_xun_list_image"
        android:layout_alignParentRight="true" />

</RelativeLayout>