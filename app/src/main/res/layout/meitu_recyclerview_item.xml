<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/meitu_item_layout"
    android:orientation="horizontal"
    android:layout_margin="@dimen/item_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--大图-->
            <ImageView
                android:id="@+id/meitu_item_img"
                android:src="@mipmap/image_load_bg"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <!--用户信息，头像，用户名-->
            <LinearLayout
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/meitu_userinfo_layout"
                android:layout_below="@id/meitu_item_img"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <com.facebook.drawee.view.SimpleDraweeView
                    fresco:roundAsCircle="true"
                    android:id="@+id/meitu_item_touxiang"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"

                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    />
                <TextView
                    android:id="@+id/meitu_item_username"
                    android:text="用户名"
                    android:maxLines="1"
                    android:maxEms="6"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <!--点赞数，背景设置成心形-->
            <TextView
                android:id="@+id/meitu_item_praiseCount"
                android:gravity="center"
                android:background="@mipmap/photo_praise_no"
                android:textSize="10sp"
                android:text="1999"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/meitu_item_img"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>