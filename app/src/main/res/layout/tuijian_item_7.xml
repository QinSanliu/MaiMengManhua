<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/tuijian_item_7_relativelayout_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:onClick="click"
        >
        <ImageView
            android:id="@+id/tuijian_item_7_xiaonianiv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/tuijian_item_7_cainitx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="继续撸"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/tuijian_item_7_xiaonianiv"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tuijian_item_7_xinshangtx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上次看过的又有更新咯！"
            android:layout_margin="5dp"
            android:textSize="10dp"
            android:layout_toRightOf="@+id/tuijian_item_7_cainitx"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/tuijian_item_7_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        >
    </android.support.v7.widget.RecyclerView>

</LinearLayout>