<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_more_item_default"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/tuijian_item_4_simiamgview_1"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            fresco:roundedCornerRadius="3dp"
            />
        <TextView
            android:id="@+id/tuijian_item_4_name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我家手机早饭了"
            android:layout_toRightOf="@id/tuijian_item_4_simiamgview_1"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tuijian_item_4_zuozhe_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绳子,需要添加作者文字头"
            android:layout_below="@+id/tuijian_item_4_name_1"
            android:layout_alignLeft="@+id/tuijian_item_4_name_1"
            />
        <TextView
            android:id="@+id/tuijian_item_4_leixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型,需要添加文字头"
            android:layout_below="@+id/tuijian_item_4_zuozhe_1"
            android:layout_alignLeft="@+id/tuijian_item_4_name_1"
            />
        <TextView
            android:id="@+id/tuijian_item_4_jianjie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介"
            android:textSize="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tuijian_item_4_leixing"
            android:layout_alignLeft="@+id/tuijian_item_4_name_1"
            android:ellipsize="end"
            />
        <!--设置星级评分条-->
        <!--<RatingBar-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:numStars="5"-->
        <!--android:layout_alignParentRight="true"-->
        <!--/>-->
    </RelativeLayout>
</LinearLayout>