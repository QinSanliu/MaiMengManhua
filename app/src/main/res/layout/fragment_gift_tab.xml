<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="horizontal"
    tools:context="com.example.administrator.maimengcartoon.fragment.mengwofragment.GiftTabFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@mipmap/bg_profile_item1"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/fragment_gift_tu_tab_getnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:textColor="#DD2248"
            android:textSize="40sp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个"
            android:textColor="#DD2248"
            android:textSize="12dp"
            android:layout_alignBottom="@id/fragment_gift_tu_tab_getnum"
            android:layout_toRightOf="@id/fragment_gift_tu_tab_getnum"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我领取过的礼包"
            android:textColor="#DD2248"
            android:textSize="18sp"
            android:layout_below="@id/fragment_gift_tu_tab_getnum"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="5dp">

    </LinearLayout>

</LinearLayout>
