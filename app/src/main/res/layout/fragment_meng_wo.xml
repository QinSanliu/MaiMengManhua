<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.maimengcartoon.fragment.mengwofragment.MengWoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:background="@mipmap/bg_profile_home">

        <ImageView
            android:id="@+id/fragment_meng_wo_touxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/image_header_nologin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/fragment_meng_wo_login"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="立即登录"
            android:textColor="#fff"
            android:textSize="20sp"
            android:background="@mipmap/denglu"
            android:gravity="center"
            android:layout_below="@id/fragment_meng_wo_touxiang"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/fragment_meng_wo_login"
            android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/fragment_meng_wo_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="消息"
            android:textSize="15sp"
            android:textColor="#fff"
            android:drawableTop="@mipmap/image_notify_message"
            android:drawablePadding="5dp"
            android:gravity="center"/>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#BCBCBC">
            </LinearLayout>

            <TextView
                android:id="@+id/fragment_meng_wo_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="积分商城"
                android:textSize="15sp"
                android:textColor="#fff"
                android:drawableTop="@mipmap/image_profile_shop"
                android:drawablePadding="5dp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#BCBCBC">
            </LinearLayout>

            <TextView
                android:id="@+id/fragment_meng_wo_ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="疯神榜"
                android:textSize="15sp"
                android:textColor="#fff"
                android:drawableTop="@mipmap/image_ranking"
                android:drawablePadding="5dp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#BCBCBC">
            </LinearLayout>

            <TextView
                android:id="@+id/fragment_meng_wo_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="设置"
                android:textSize="15sp"
                android:textColor="#fff"
                android:drawableTop="@mipmap/image_profile_setting"
                android:drawablePadding="5dp"
                android:gravity="center"/>

        </LinearLayout>

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/fragment_meng_wo_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabSelectedTextColor="#DD2248">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_meng_wo_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>
