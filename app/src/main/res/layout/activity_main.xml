<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.maimengcartoon.ui.MainActivity">

    <FrameLayout
        android:id="@+id/activity_main_frameLayoutId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080" />

    <RadioGroup
        android:id="@+id/activity_main_radioGroupId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp">
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:text="萌资讯"
            android:drawableTop="@drawable/zixun_new_selector"
            android:gravity="center"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:text="漫画"
            android:drawableTop="@drawable/manhua_new_selector"
            android:gravity="center"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:text="美图"
            android:drawableTop="@drawable/meitu_new_selector"
            android:gravity="center"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:text="萌窝"
            android:drawableTop="@drawable/mengwo_new_selector"
            android:gravity="center"/>

    </RadioGroup>

</LinearLayout>
