<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.maimengcartoon.fragment.manhuafaragment.ManHuaFragment">

    <!--推荐的TabLayout的设置-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:gravity="center_vertical"
        >
        <!--new图片按钮-->
        <ImageButton
            android:id="@+id/mahua_tablayout_new_fragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/image_comic_update"
            android:background="@null"
            android:onClick="click"
            />

        <android.support.design.widget.TabLayout
            android:id="@+id/manhua_tablayout_fragment"
            android:layout_width="0dp"
            android:layout_height="?android:actionBarSize"
            android:layout_weight="4"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#ff0000"
            >
        </android.support.design.widget.TabLayout>
            <!--搜索的图片按钮-->
        <ImageButton
            android:id="@+id/manhua_tanlayout_search_fragment"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:src="@mipmap/search_article"
           android:background="@null"
            android:onClick="click"
           />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff0000"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/manhua_viewpager_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

</LinearLayout>
