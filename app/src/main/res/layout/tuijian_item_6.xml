<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    >
    <RelativeLayout
        android:id="@+id/tuijian_item_6_relativelayout_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:onClick="click"
        >
        <ImageView
            android:id="@+id/tuijian_item_6_sctupianiv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/tuijian_item_6_shoucangtx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="继续撸"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/tuijian_item_6_sctupianiv"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tuijian_item_6_dajiatx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上次看过的又有更新咯！"
            android:layout_margin="5dp"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/tuijian_item_6_shoucangtx"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/more"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="400dp"
            android:layout_weight="1"
            android:src="@mipmap/image_most_collect_bg"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/tuijian_item_6_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            >
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</LinearLayout>